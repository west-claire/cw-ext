<mvc:View controllerName="vendor.ext.viewplugins.controller.MainView"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <Panel width="auto" class="sapUiResponsiveMargin">
                            <headerToolbar>
                                <OverflowToolbar height="3rem">
                                    <Title text="{i18n>title}"/>
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <l:BlockLayout id="BlockLayout" background="Light">
                                    <l:BlockLayoutRow>                     
                                        <l:BlockLayoutCell title="Example View Plugin">
                                            <Text
                                                id="text2"
                                                wrappingType="Hyphenated"
                                                text="Demonstrates a 'View' type plugin that displays current selection information in the POD during runtime.  This also demonstrates how to define and implement the necessary functions to subscribe to a custom notification event. This plugin also shows how to call public API to read material custom data." />
                                        </l:BlockLayoutCell>
                                        <l:BlockLayoutCell title="View Plugin Template">
                                            <Text
                                                id="text3"
                                                wrappingType="Hyphenated"
                                                text="View Plugin Template to start development with custom POD Plugin." />
                                        </l:BlockLayoutCell>
                                    </l:BlockLayoutRow>
                                </l:BlockLayout>
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
